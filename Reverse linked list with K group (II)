// REVERSE THE LINKED LIST WITH K GROUPS BUT HERE NUMBER OF NODES MAY NOT BE NECESSARILY THE MULTIPLE OF K:
//SOURCE CODE:

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
//THIS STEP IS EXTRA ,TO FIX THE NON MULTIPLE PART:
    ListNode* reverseKGroup(ListNode* head, int k) {
       ListNode* cursor = head;
        for(int i = 0; i < k; i++){
            if(cursor == NULL) return head;
            cursor = cursor->next;
        }




        //STEP:1
        if(head==NULL)
        return NULL;
        //step2:
         ListNode* prev=NULL;
         ListNode* next=NULL;
         ListNode* curr=head;
         int cnt=0;
         while(curr != NULL && cnt <k){
             next=curr->next;
             curr->next=prev;
             prev=curr;
             curr=next;
             cnt++;
         }
         //step: 3
         if(next != NULL){
             head->next= reverseKGroup(next,k);
         }
  return prev;
  
    }
    
};
